<h1>Listing Recipes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Recipe</th>
      <th>Foodname</th>
      <th>Weight</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.user_id %></td>
        <td><%= recipe.recipe_id %></td>
        <td><%= recipe.foodname %></td>
        <td><%= recipe.weight %></td>
            
            <td><%= form_for :recipe do |f| %>
                      <%= f.text_field :weight %>
                <% end %>
            </td>

        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <div class="ctn0"><p>  </p></div>
    <% end %>
  </tbody>
</table>
