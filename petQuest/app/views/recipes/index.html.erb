      <div class="banner padd">
        <div class="container">
          <!-- Image -->
          <div class="img-responsive" alt=""><%=image_tag "crown-white.png"%></div>
          <!-- Heading -->
          <h2 class="white">Recipes List</h2>
          <ol class="breadcrumb">
            <li><a href="index.html">Home</a></li>
            <li class="active">Reserve Seats</li>
          </ol>
          <div class="clearfix"></div>
        </div>
      </div>
