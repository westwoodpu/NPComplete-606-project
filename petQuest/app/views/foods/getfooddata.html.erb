<h1>Listing Foods</h1>

<div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Reference price</th>
          <th>Cook method</th>
          <th>Food category</th>
          <th>Img dir</th>
          <th>Food id</th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% @food_data.each do |food| %>
          <tr>
            <td><%= food.name %></td>
            <td><%= food.description %></td>
            <td><%= food.reference_price %></td>
            <td><%= food.cook_method %></td>
            <td><%= food.food_category %></td>
            <td><%= food.img_dir %></td>
            <td><%= food.food_id %></td>
            <td><%= link_to 'Show', food %></td>
            <td><%= link_to 'Add',  add_path(food) %></td>
            <td><%= link_to 'Edit', edit_food_path(food) %></td>
            <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>